<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_maps"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_margin="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/RadiusImageView"
        app:strokeColor="@color/lol_yellow"
        app:strokeWidth="5dp" />

    <FrameLayout
        android:id="@+id/fl_maps"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/iv_maps"
        app:layout_constraintEnd_toEndOf="@id/iv_maps"
        app:layout_constraintStart_toStartOf="@id/iv_maps"
        app:layout_constraintTop_toTopOf="@id/iv_maps">

        <TextView
            android:id="@+id/tv_maps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/gradient_background"
            android:fontFamily="@font/audiowide"
            android:padding="8dp"
            android:text="@string/maps"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>