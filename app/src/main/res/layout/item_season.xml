<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_season"
        android:layout_width="0dp"
        android:layout_height="190dp"
        android:layout_margin="12dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/RadiusImageView"
        app:strokeColor="@color/lol_blue_light"
        app:strokeWidth="8dp" />

    <View
        android:layout_width="0dp"
        android:layout_height="8dp"
        android:background="@drawable/gradient_blue"
        app:layout_constraintBottom_toTopOf="@id/tv_season"
        app:layout_constraintEnd_toEndOf="@id/iv_season"
        app:layout_constraintStart_toStartOf="@id/iv_season" />

    <TextView
        android:id="@+id/tv_season"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_background"
        android:fontFamily="@font/audiowide"
        android:padding="4dp"
        android:text="@string/season_2022"
        android:textAlignment="center"
        android:layout_marginBottom="20dp"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/iv_season"
        app:layout_constraintEnd_toEndOf="@id/iv_season"
        app:layout_constraintStart_toStartOf="@id/iv_season" />

    <View
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:background="@drawable/gradient_blue"
        app:layout_constraintEnd_toEndOf="@id/iv_season"
        app:layout_constraintStart_toStartOf="@id/iv_season"
        app:layout_constraintTop_toBottomOf="@id/tv_season" />

</androidx.constraintlayout.widget.ConstraintLayout>